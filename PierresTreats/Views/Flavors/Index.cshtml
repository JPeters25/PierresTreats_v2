@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<div class="row">
  <div class="jumbotron text-center">
    <h2>Pierre's Treats</h2>
  </div>
</div>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><img class="logo" src='/img/logo.png' width="100px"/></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" @Html.ActionLink("Home","Index","Home")>Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"@Html.ActionLink("Flavors","Index","Flavors")>Flavors</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"@Html.ActionLink("Treats","Index","Treats")>Treats</a>
        </li>
      </ul>
      <span class="navbar-text">
        @using (Html.BeginForm("LogOff", "Account"))
        {
          <input type="submit" class="btn btn-outline-primary" value="Log out" />
        }
      </span>
    </div>
  </div>
</nav>
<div class="row">
  <div class="card" id=flavorCard>
    <h3 class="card-title">Flavors List</h3>
      <div class="card-body">
        <div id=flavorList>
        
          @if (@Model.Count == 0)
          {
            <h3>No categories have been added yet!</h3>
          } 

          <ul>
            @foreach(Flavor flavor in Model)
            {
              <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
            }
          </ul>

          <button class="btn btn-primary">@Html.ActionLink("Add a flavor", "Create", "Flavors")</button>
        </div>
      </div>
  </div>
</div>
