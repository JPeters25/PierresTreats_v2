@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model IEnumerable<PierresTreats.Models.Treat>;

<div class="jumbotron text-center">
  <h2>Treat List</h2>
</div>
<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          @Html.ActionLink("Home", "Index", "Home", null, new { @class="nav-link" })
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Flavor
          </a>
          <ul class="dropdown-menu">
            <li>@Html.ActionLink("All Flavors", "Index", "Flavors", null, new { @class="dropdown-item" })</li>
            <li>@Html.ActionLink("New Flavor", "Create", "Flavors", null, new { @class="dropdown-item" })</li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Treat
          </a>
          <ul class="dropdown-menu">
            <li>@Html.ActionLink("All Treat", "Index", "Treats", null, new { @class="dropdown-item" })</li>
            <li>@Html.ActionLink("New Treat", "Create", "Treat", null, new { @class="dropdown-item" })</li>
          </ul>
        </li>
      </ul>
      <div>
        @using (Html.BeginForm("Index", "Treats", FormMethod.Get))
        {
          <div class="d-flex" role="search">
            @Html.TextBox("SearchString", null, new { type="search", placeholder = "Search", @class="form-control me-2"})
            <button class="btn btn-outline-success" type="submit">Search</button>
          </div>
        }
      </div>
    </div>
  </div>
</nav>
<hr />

<div class="jumbotron text-center">
    <h2>Treats for @User.Identity.Name</h2>
</div>


@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
} 
else
{
  <h3>No treat have been added yet!</h3>
}